{
  "name": "sentiment-data-scripts",
  "version": "1.0.0",
  "description": "Data fetching and sentiment analysis scripts for investor sentiment dashboard",
  "main": "fetch-data.js",
  "type": "module",
  "scripts": {
    "fetch": "node fetch-data.js",
    "analyze": "node analyze-sentiment.js",
    "update": "node update-all.js",
    "test": "node test-setup.js",
    "install-deps": "npm install",
    "performance-test": "node performance-test.js",
    "cost-analysis": "node cost-analysis.js",
    "cache-stats": "node cache-manager.js stats",
    "cache-cleanup": "node cache-manager.js cleanup",
    "monitoring": "node monitoring-dashboard.js",
    "enterprise": "node enterprise-fetch-data.js",
    "health-check": "node -e \"import('./health-monitor.js').then(m => m.getHealthMonitor().triggerHealthCheck())\"",
    "quality-report": "node -e \"import('./data-quality.js').then(m => console.log(JSON.stringify(new m.default().getQualityMetrics(), null, 2)))\"",
    "pipeline-status": "node -e \"import('./pipeline-monitor.js').then(m => console.log(JSON.stringify(m.getPipelineMonitor().getDashboardData(), null, 2)))\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "node-cache": "^5.1.2",
    "vader-sentiment": "^1.1.3",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "cheerio": "^1.0.0-rc.12",
    "rss-parser": "^3.13.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}